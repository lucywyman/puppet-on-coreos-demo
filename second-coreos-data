#cloud-config

hostname: second-coreos.delivery.puppetlabs.net

coreos:
  units:
  - name: puppet.service
    command: start
    content: |
      [Unit]
      Description=Puppet
      After=docker.service
      Requires=docker.service

      [Service]
      TimeoutStartSec=0
      ExecStartPre=-/usr/bin/docker kill puppet1
      ExecStartPre=-/usr/bin/docker rm puppet1
      ExecStartPre=/usr/bin/docker pull puppet/puppet-agent
      ExecStart=/usr/bin/docker run --rm --privileged --name puppetagent --hostname second-coreos.delivery.puppetlabs.net -v /tmp:/tmp -v /etc:/etc -v /var:/var -v /usr:/usr -v /lib64:/lib64 --network host puppet/puppet-agent

      [Install]
      WantedBy=multi-user.target

  - name: 00-ens192.network
    runtime: true
    content: |
      [Match]
      Name=ens192

      [Network]
      DNS=10.20.1.84
      Domains=second-coreos.delivery.puppetlabs.net
      Address=10.20.1.84
      Gateway=10.0.2.2

write_files:
  - path: /etc/puppetlabs/puppet/puppet.conf
    permissions: 0644
    content: |
      [agent]
      server=puppet-master.delivery.puppetlabs.net
      certname=second-coreos.delivery.puppetlabs.net
